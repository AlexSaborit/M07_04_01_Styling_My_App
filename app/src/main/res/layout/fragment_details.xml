<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <ImageView
            android:id="@+id/ImgVwCaratula"
            android:src="@drawable/noimageavailable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="4"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/TxtVwTitol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si us plau, selecciona un producte del llistat."
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/TxtVwJugs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="programat per Alex Saborit i Bolea"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivFigura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/noimageavailable"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitol"
            style="@style/Titols"
            android:text="NOM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tvPreu"
            style="@style/TextPrincipal"
            android:text="PREU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tvOferta"
            style="@style/TextPrincipal"
            android:text="OFERTA!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvSelector"
                style="@style/TextPrincipal"
                android:text="QUANTITAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Spinner
                android:id="@+id/spSelector"
                style="@style/TextPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvOrigen"
            style="@style/TextPrincipal"
            android:text="ORIGEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tvEscala"
            style="@style/TextPrincipal"
            android:text="ESCALA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/Articulada"
            style="@style/TextPrincipal"
            android:text="ARTICULADA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</FrameLayout>